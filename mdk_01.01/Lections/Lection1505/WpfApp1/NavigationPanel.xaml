<UserControl x:Class="WpfApp1.NavigationPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="60">
    <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Top">
        <Button x:Name="PrevButton" Content="&lt;" Width="20" Click="PrevButton_Click"/>
        <TextBox x:Name="PageTextBox" Text="{Binding CurrentPage}"/>
        <Button x:Name="NextButton" Content=">" Width="20" Click="NextButton_Click"/>
    </WrapPanel>
</UserControl>
