<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label x:Name="label1" Content="12345" MouseDown="Label1_MouseDown"/>
        <Label x:Name="label2" Content="qwerty" Drop="Label2_Drop"/>
        <ListBox x:Name="valueListBox" Height="100" Drop="valueListBox_Drop" AllowDrop="True"/>
        <ListBox x:Name="ListBox1" Height="100" MouseDown="ListBox1_MouseDown" SelectionChanged="ListBox1_SelectionChanged"/>
        <ListBox x:Name="ListBox2" Height="100" AllowDrop="True" Drop="ListBox2_Drop"/>
        

    </StackPanel>
</Window>
