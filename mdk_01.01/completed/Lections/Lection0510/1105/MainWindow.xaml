<Window x:Class="_1105.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1105"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MouseMove="Window_MouseMove"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
        
    <Canvas x:Name="canvas"
        Rectangle.MouseMove="Canvas_MouseMove"
        Rectangle.MouseUp="Canvas_MouseUp"
        Rectangle.MouseDown="Canvas_MouseDown">
        <Label x:Name="positionLabel" Content="x;y"/>
        <Button Content="OK" Canvas.Left="100" Canvas.Top="200"/>
        <Rectangle Fill="Lime" Width="100" Height="50" Canvas.Left="200" Canvas.Top="100"/>                   
    </Canvas>
</Window>
