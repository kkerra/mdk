<Window x:Class="Lection0306.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lection0306"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Window.DataContext>
        <local:User/>
    </Window.DataContext>
    
    <StackPanel>
        <TextBox x:Name="dataTextBox" Text="{Binding .}"/>
        <TextBox x:Name="loginTextBox" Text="{Binding Login}"/>
        <TextBox x:Name="login2TextBox" Text="{Binding Login}"/>
        <TextBox x:Name="passwordTextBox" Text="{Binding Password}"/>
    </StackPanel>
</Window>
