<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <StackPanel>
        <TextBox x:Name="queryTextBox" Text="UPDATE Book SET price = price + 100"/>
        <WrapPanel>
            <Button Content="Task1" Click="EditTableDataButton_Click" Width="70"/>
            <Button Content="Task2" Click="UpdatePriceButton_Click" Width="70"/>
            <Button Content="Сохранить" Click="SaveButton_Click" Width="70"/>
        </WrapPanel>
        <DataGrid x:Name="dataGrid" Height="400"/>
    </StackPanel>
</Window>
