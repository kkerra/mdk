<Window x:Class="Task4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="Цена:"/>
        <Slider x:Name="priceSlider" Maximum="1000000" ValueChanged="Slider_ValueChanged"/>
        <Label Content="Процент:"/>
        <Slider x:Name="percentSlider" Maximum="100" ValueChanged="Slider_ValueChanged"/>
        <Label x:Name="resultLabel" Content="Результат:"/>
        <TextBlock x:Name="sumTextBlock">Сумма:</TextBlock>
        <TextBlock x:Name="percentTextBlock">Процент: %</TextBlock>
        <TextBlock x:Name="resultTextBlock">Результат:</TextBlock>
    </StackPanel>
</Window>
