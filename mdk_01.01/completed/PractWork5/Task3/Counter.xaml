<UserControl x:Class="Task3.Counter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Task3"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="60">
    <WrapPanel>
        <Button x:Name="decreaseButton" Content="-" Width="20" Click="DecreaseButton_Click"/>
        <TextBox x:Name="countTextBox" Width="20" Text="{Binding Value}"/>
        <Button x:Name="addButton" Content="+" Width="20" Click="AddButton_Click"/>
    </WrapPanel>
</UserControl>
