<Window x:Class="Task3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <local:Counter x:Name="productCounter" HorizontalAlignment="Left" VerticalAlignment="Top" ValueChanged="ProductCounter_ValueChanged"/>
        <Label Content="Введите цену"/>
        <TextBox x:Name="priceTextBox" Width="100" HorizontalAlignment="Left" TextChanged="PriceTextBox_TextChanged" />
        <Label x:Name="priceLabel" Content="Цена:"/>
    </StackPanel>
</Window>
