<Page x:Class="LabWork27.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LabWork27.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Button Content="Авторизация" x:Name="AuthorizeButton" Click="AuthorizeButton_Click"/>
        <Button Content="Регистрация" x:Name="RegisterButton" Click="RegisterButton_Click"/>
        <Button Content="Настройки" x:Name="OpenSettingsButton" Click="OpenSettingsButton_Click"/>
    </StackPanel>
</Page>
