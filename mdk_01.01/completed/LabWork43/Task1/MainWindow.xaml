<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize">
    <Canvas>
        <Image Source="/1.png" Canvas.Left="70" Canvas.Top="60"/>
        <Ellipse x:Name="cookieEllipse" Height="250" Width="242" Canvas.Left="74" Canvas.Top="60" HorizontalAlignment="Center" VerticalAlignment="Top" Cursor="Hand" MouseDown="CookieEllipse_MouseDown">
            <Ellipse.Fill>
                <ImageBrush ImageSource="/1.png" Opacity="0.05"/>
            </Ellipse.Fill>
        </Ellipse>
        <Rectangle x:Name="grandmomRectangle" Height="200" Width="106" Canvas.Left="590" Canvas.Top="85" HorizontalAlignment="Left" VerticalAlignment="Center" MouseDown="GrandmomRectangle_MouseDown">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/2.jpg"/>
            </Rectangle.Fill>
        </Rectangle>
        <Label x:Name="cookieLabel" Canvas.Left="430" Canvas.Top="170" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Label x:Name="grandmomLabel" Canvas.Left="630" Canvas.Top="310" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Canvas>
</Window>
