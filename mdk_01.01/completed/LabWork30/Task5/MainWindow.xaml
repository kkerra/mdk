<Window x:Class="Task5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="Red"/>
        <Slider x:Name="redSlider" Maximum="255" Width="300" HorizontalAlignment="Left" ValueChanged="Slider_ValueChange"/>
        <CheckBox x:Name="redCheckBox" Content="Учитывать цвет" Checked="CheckBox_Checked"/>
        <Label Content="Green"/>
        <Slider x:Name="greenSlider" Maximum="255" Width="300" HorizontalAlignment="Left" ValueChanged="Slider_ValueChange"/>
        <CheckBox x:Name="greenCheckBox" Content="Учитывать цвет" Checked="CheckBox_Checked"/>
        <Label Content="Blue"/>
        <Slider x:Name="blueSlider" Maximum="255" Width="300" HorizontalAlignment="Left" ValueChanged="Slider_ValueChange"/>
        <CheckBox x:Name="blueCheckBox" Content="Учитывать цвет" Checked="CheckBox_Checked"/>
    </StackPanel>
</Window>
