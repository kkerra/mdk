<Window x:Class="LabWork23.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWork23"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="Выберите дату"/>
        <DatePicker x:Name="SessionDatePicker"/>
        <Label Content="Выберите кинотеатр"/>
        <TextBox x:Name="CinemaTextBox"/>
        <Button x:Name="SaveCsvButton" Content="Сохранить в csv" Width="100" Click="SaveCsvButton_Click"/>
        <Button x:Name="SaveXlsxButton" Content="Сохранить в xlsx" Width="100" Click="SaveXlsxButton_Click"/>
    </StackPanel>
</Window>
