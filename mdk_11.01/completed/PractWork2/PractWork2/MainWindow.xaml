<Window x:Class="PractWork2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PractWork2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="moviesDataGrid"/>
        <StackPanel Grid.Column="1">
            <Button x:Name="GetByIdButton" Content="Информация по Id" Click="GetByIdButton_Click"/>
            <Button x:Name="DeleteButton" Content="Удалить" Click="DeleteButton_Click"/>
            <Label Content="Название"/>
            <TextBox x:Name="TitleTextBox"/>
            <Button x:Name="UpdateButton" Content="Обновить" Click="UpdateButton_Click"/>
            <Label Content="Продолжительность"/>
            <TextBox x:Name="DurationTextBox"/>
            <Label Content="Год релиза"/>
            <TextBox x:Name="ReleaseYearTextBox"/>
            <Label Content="Описание"/>
            <TextBox x:Name="DescriptionTextBox"/>
            <Label Content="Возрастное ограничение"/>
            <TextBox x:Name="AgeRatingTextBox"/>
            <Button x:Name="AddButton" Content="Добавить" Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
