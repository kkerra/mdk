<Window x:Class="LabWork22.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWork22"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel >
        <Label Content="Укажите номер билета"/>
        <TextBox x:Name="TicketTextBox"/>
        <Button x:Name="SaveToTxtButton" Content="Сохранить в txt" Width="100" Click="SaveToTxtButton_Click"/>
        <Button x:Name="SaveToPdfButton" Content="Сохранить в pdf" Width="100" Click="SaveToPdfButton_Click"/>
    </StackPanel>
</Window>
